{
	"manifest_version": 2,
	"name": "Imgur to Gfycat",
	"short_name": "Imgur to Gfy",
	"version": "1.3.0",
	"description": "Replaces imgur gifs with gfycat optimized videos and gifs.",
	"icons": {
		"16": "icon-bitty.png",
		"48": "icon-small.png",
		"128": "icon-large.png"
	},
	"web_accessible_resources": ["gfyembed.js"],
	"permissions": [
	  "webRequest",
	  "webRequestBlocking",
	  "*://*.imgur.com/*",
	  "contextMenus"
	],
	"background": {
		"scripts" : ["bg.js"],
		"persistent": true
	},
	"content_scripts": 
	[
		{
			"matches": ["http://*/*"],
			"js": ["superagent.js", "imgur-to-gfycat.js", "drag-to-resize.js"],
			"run_at": "document_end"
		}
	]
}

